<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="BusinessCalculator.AppIOSShell"
       xmlns:views="clr-namespace:BusinessCalculator.MVVM.Views" 
       xmlns:viewModels="clr-namespace:BusinessCalculator.MVVM.ViewModels" 
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
       BackgroundColor="{StaticResource Primary}">
    <Tab>
        <ShellContent Title="Калькулятор" ContentTemplate="{DataTemplate views:CalculatorIOSView}"/>
        <ShellContent Title="Конвертер" ContentTemplate="{DataTemplate views:ConverterIOSView}"/>
    </Tab>
</Shell>
